<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".main.MainActivity">



 <fragment
        android:id="@+id/lista_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.juni.limaguialugares.lista.ListFragment"
        android:layout_below="@id/detalles_fragment"/>

    <fragment
        android:id="@+id/detalles_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.juni.limaguialugares.detail.DetailFragment"
        />



</LinearLayout>